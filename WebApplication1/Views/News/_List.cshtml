@model List<WebApplication1.ViewModels.ListNewsFilesVM>
@using WebApplication1.Extensions
@{
    int count = 0;

}
<table class="table table-striped">
    <tbody>
        <tr>
            <th>ردیف</th>
            <th>نوع</th>
            <th>عنوان</th>
            <th>توضیحات</th>
            <th> تاریخ بروز رسانی</th>
            <th>دانلود<i class="bi bi-download"></i></th>
        </tr>
        @foreach (var item in Model)
        {
            string extension = item.Link.GetExtension();
            <tr>
                <td>@(++count)</td>
                <td>@item.FileTypeTitle</td>
                <td>@item.Title</td>
                <td>@item.Description</td>
                <td>@item.UpdateDateStr</td>
                <td>
                    <a href="@item.Link" download style="color:blue;cursor:pointer">
                        دانلود
                        <i class="bi bi-@(UploadFileTools.GetIcon(extension))"></i>
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>
